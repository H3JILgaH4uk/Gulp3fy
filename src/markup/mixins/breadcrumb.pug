//- Breadcrumb
mixin breadcrumb(mods)
	-
		let modsArray = '';

		if (mods) {
			const modsList = mods.split(',');

			for (let i = 0; i < modsList.length; i++) {
				modsArray = `${modsArray} ${modsList[i].trim()}__breadcrumb`;
			}
		}

	nav.breadcrumb(class=modsArray, aria-label='breadcrumb')&attributes(attributes)
		ol.breadcrumb__list
			block

//- Breadcrumb item
mixin breadcrumb-item(data)
	-
		const isCurrent   = !data.link ? `breadcrumb__item--current` : null;
		const hasLink     =  data.link ? data.link : null;
		const ariaCurrent = !data.link ? 'page' : null;
		const tag         =  data.link ? 'a' : 'span';

	li.breadcrumb__item(class=isCurrent, href=hasLink, aria-current=ariaCurrent)
		#{tag}(class=data.link ? 'breadcrumb__link' : null, href=data.link)= data.text
