mixin picture(options)
	- const path = 'assets/images';

	picture
		source(
			srcset=`${path}/${options.image.split('.')[0]}.webp`,
			media=options.media ? `(${options.media})` : null,
			type='image/webp'
		)
		img(loading='lazy', src=`${path}/${options.image}`, class=options.class, alt=options.alt)&attributes(attributes)
