//- Arguments:
	name {string} - Modal ID (Without '#')
	mods {string} - Mod('s)

//- Call:
	Show modal:
		+btn({ text: 'Show modal', mods: 'primary'})(data-modal='{Modal ID}')

	Structure:
		+modal({name: 'modal-1'})
			+modal-header
				h3.modal__title Modal title

			article.modal__content
				p Lorem ipsum dolor sit amet

			footer.modal__footer
				menu.modal__footer-menu
					+btn({ text: 'Cancel', mods: 'secondary'})(data-modal-close='')
					+btn({ text: 'Confirm', mods: 'primary'})

mixin modal(data)
	-
		let modsArray = '';

		if (data.mods) {
			const modsList = data.mods.split(',');

			for (let i = 0; i < modsList.length; i++) {
				modsArray = `${modsArray} ${modsList[i].trim()}__modal`;
			}
		}

	dialog.modal(class=modsArray, id=data.name)
		.modal__wrapper
			block

mixin modal-header(btnTitle = 'Close modal')
	header.modal__header
		block
		button.modal__close(data-modal-close='', type='button', title=btnTitle)
			svg(width='18', height='18', viewBox='0 0 24 24')
				line(x1='18', y1='6', x2='6', y2='18')
				line(x1='6', y1='6', x2='18', y2='18')
