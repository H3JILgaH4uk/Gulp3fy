//- Arguments:
	tab  {string} - Unique tab name
	text {string} - Tab button text
	mods {string} - Mod('s)

//- Call:
	+tab({ tab: 'tabName' })
		block buttons
			+tab-btn('Tab title')

		block contents
			+tab-content
				...

//- Tab
mixin tab(data)
	-
		let modsArray = '';

		if (data.mods) {
			const modsList = data.mods.split(',');

			for (let i = 0; i < modsList.length; i++) {
				modsArray = `${modsArray} ${modsList[i].trim()}__tabs`;
			}
		}

	.tabs(class=modsArray, data-tab=data.tab)&attributes(attributes)
		nav.tabs__header(role='tablist')
			block tabs-header
		.tabs__inner
			block tabs-content

//- Button
mixin tab-btn(text)
	button.tabs__btn(type='button')&attributes(attributes)!= text

//- Content
mixin tab-content
	.tabs__content(role='tabpanel')&attributes(attributes)
		block
