mixin img(data)
	-
		let modsArray = '';

		if (data.mods) {
			const modsList = data.mods.split(',');

			for (let i = 0; i < modsList.length; i++) {
				modsArray = `${modsArray} ${modsList[i].trim()}`;
			}
		}

	img.lazy(class=modsArray, data-src=data.src, src='assets/images/common/placeholder.png', alt=data.alt)&attributes(attributes)

mixin pic(data)
	-
		const imageFullName = data.src.split('.');
		const [imageName, imageExtname] = imageFullName;
		let modsArray = '';

		if (data.mods) {
			const modsList = data.mods.split(',');

			for (let i = 0; i < modsList.length; i++) {
				modsArray = `${modsArray} ${modsList[i].trim()}`;
			}
		}

	picture
		source(
			type='image/webp',
			data-srcset=`${imageName}.webp`,
			srcset='assets/images/common/placeholder.png'
		)
		img.lazy(
			class=modsArray,
			data-src=`${imageName}.${imageExtname}`,
			src='assets/images/common/placeholder.png',
			alt=data.alt
		)&attributes(attributes)

mixin sprite(name)
	svg&attributes(attributes)
		use(xlink:href=`assets/sprites/sprite.svg#${name}`)
