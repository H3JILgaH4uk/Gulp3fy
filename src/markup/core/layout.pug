//- Config & mixin
include ../core/config.pug
include ../mixins/**/*.pug

//- Components
include ../mixins/badge.pug
include ../mixins/breadcrumb.pug
include ../mixins/btn.pug
include ../mixins/burger.pug
include ../mixins/card.pug
include ../mixins/dropdown.pug
include ../mixins/footer.pug
include ../mixins/modal.pug
include ../mixins/nav.pug
include ../mixins/pagination.pug
include ../mixins/spoiler.pug
include ../mixins/tabs.pug

block settings

doctype html
html(lang=page.lang)
	head
		include ../core/head.pug
		block styles

	body.body
		.wrapper
			if page.header
				header.header
					.header__inner.container
						-
							let tag
							page.id !== 0 ? (tag = `a href='${page.canonical}'`) : (tag = 'div');

						block header
							include ../parts/header.pug

			main.main
				block content

				if page.modal
					include ../parts/modal.pug

			if page.footer
				footer.footer(role='contentinfo')
					.footer__inner.container
						block footer
							include ../parts/footer.pug

		block scripts
			script(src='assets/js/app.min.js')
