//- Config & mixin
include ../core/config.pug
include ../mixins/**/*.pug

block settings

doctype html
html(lang=page.lang)
	head
		include ../core/head.pug
		block styles

	body.body
		.wrapper
			if page.header
				header.header
					.header__inner.container
						-
							let tag;
							page.id !== 0 ? (tag = `a href='${page.canonical}'`) : (tag = 'div');

						block header
							include ../parts/header.pug

			main.main
				block content

			if page.footer
				footer.footer(role='contentinfo')
					.footer__inner.container
						-
							let tag;
							page.id !== 0 ? (tag = `a href='${page.canonical}'`) : (tag = 'div');

						block footer
							include ../parts/footer.pug

			if page.modal
				include ../parts/modal.pug

		block scripts
			script(src='assets/js/main.min.js')
