//- Arguments:
	mods {string}  - Mod('s)
	copy {boolean} - Turn on copyright block

//- Call:
	+footer({}) - Without copyright
	+footer({ copy: true }) - With copyright

mixin footer(data)
	-
		let modsArray = '';

		if (data.mods) {
			const modsList = data.mods.split(',');

			for (let i = 0; i < modsList.length; i++) {
				modsArray = `${modsArray} footer--${modsList[i].trim()}`;
			}
		}

	footer.footer(class=modsArray, role='contentinfo')&attributes(attributes)
		.footer__inner.container
			block

			if data.copy
				.footer__copy
					script.
						document.write(`&copy; ${new Date().getFullYear()} #{brandName}. #{copyText}`);

+footer({})
