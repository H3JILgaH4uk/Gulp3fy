//- === Breadcrumbs mixins ===
//- ==================
//- Arguments:
	prefix {string} - Prefix
	title  {string} - Breadcrumb title
	link   {string} - Breadcrumb link

//- Call:
	+breadcrumbs
			+breadcrumbs-item('Home', 'http://example.com/')
			+breadcrumbs-item('News', 'http://example.com/news/')
			+breadcrumbs-item('Recent')
//- ==============================

//- Breadcrumbs
mixin breadcrumbs(prefix)
	-
		var allMods = '';
		if(typeof(prefix) !== 'undefined' && prefix) {
			var modsList = prefix.split(',');
			for (var i = 0; i < modsList.length; i++) {
				allMods = `${allMods} ${modsList[i].trim()}__breadcrumbs`;
			}
		}

	nav(class=allMods, aria-label='breadcrumb')&attributes(attributes)
		ol.breadcrumbs
			block

//- Breadcrumbs item
mixin breadcrumbs-item(title, link)
	if (typeof(link) !== 'undefined' && link)
		li.breadcrumbs__item
			a.breadcrumbs__link(href=link)= title
			span.breadcrumbs__divider
	else
		li.breadcrumbs__item.--current(aria-current=title)= title
